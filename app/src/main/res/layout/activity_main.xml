<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatbg"
    tools:context=".MainActivity">

    <LinearLayout
        android:padding="10sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           android:id="@+id/textinputlayoutNAME"

            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name: "

            app:hintTextColor="#F6D4D4"

            android:textSize="30dp"
            app:hintTextAppearance="@color/white"
            app:boxBackgroundColor="#2AF3DDDD"
            android:textColor="@color/white"
            app:cursorColor="#FF0000"

            android:drawablePadding="5sp"
            app:counterTextColor="@color/white"
            android:elevation="10sp"
            android:textStyle="bold"
            android:textColorHint="@color/white"
            app:boxStrokeColor="#D0DF6174"
            app:boxStrokeWidth="3dp"

            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEnterName"
                android:textSize="20sp"
                android:backgroundTint="#D88B8B"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:backgroundTintMode="multiply"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/textinputlayoutCODE"

            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Code: "
            app:hintTextColor="#F6D4D4"

            android:textSize="30dp"
            app:hintTextAppearance="@color/white"
            app:boxBackgroundColor="#2AF3DDDD"
            android:textColor="@color/white"
            app:cursorColor="#FF0000"

            android:drawablePadding="5sp"
            app:counterTextColor="@color/white"
            android:elevation="10sp"
            android:textStyle="bold"
            android:textColorHint="@color/white"
            app:boxStrokeColor="#DAD59096"
            app:boxStrokeWidth="3dp"

            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCode"
                android:textSize="20sp"
                android:backgroundTint="#D88B8B"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:backgroundTintMode="multiply"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

         <androidx.appcompat.widget.AppCompatButton
             android:layout_marginTop="10sp"
             android:id="@+id/btnEnterRoom"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/btn_bg"
             android:text="Room"
             android:elevation="100dp"
             android:textColor="#D71E1A1A"
             android:textAlignment="center"
             android:layout_gravity="center"
             android:drawablePadding="-25sp"
             android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
             />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>